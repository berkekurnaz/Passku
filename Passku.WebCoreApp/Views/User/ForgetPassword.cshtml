
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="site-section" id="contact-section">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-7 mb-5">



                <form asp-controller="User" asp-action="ForgetPassword" method="post" enctype="multipart/form-data" class="p-5 bg-white">

                    <center><h2 class="h4 text-black mb-5">Register</h2></center>
                    <hr />

                    @if (TempData["MsgUserForgetPasswordMessage"] != null)
                    {
                        <div class="alert alert-dark text-center" role="alert">
                            @TempData["MsgUserForgetPasswordMessage"]
                        </div>
                    }

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="NameSurname">Mail Address</label>
                            <input type="email" id="mail" name="mail" class="form-control rounded-0" required>
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <center><input type="submit" value="Send Password To Mail Address" class="btn btn-primary mr-2 mb-2"></center>
                        </div>
                    </div>


                </form>
            </div>

        </div>

    </div>
</div>

